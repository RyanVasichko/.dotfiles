[init]
  defaultBranch = master

[rebase]
  autostash = true

[pull]
  rebase = true

[fetch]
  prune = true

[core]
  editor = nvim
  excludesfile = ~/.gitignore_global

[color]
    ui = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = green
    changed = yellow
    untracked = red bold
